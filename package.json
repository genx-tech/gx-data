{
    "name": "@genx/data",
    "version": "2.0.0",
    "description": "Gen-X Suite data abstract layer.",
    "main": "lib/index.js",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "prettier": "prettier --write . --ignore-unknown",
        "lint": "eslint \"src/**/*.js\"",
        "doc": "jsdoc -c jsdoc.json -t ./node_modules/ink-docstrap/template -R README.md -d './docs/api' -r --verbose ./src",
        "jison": "jison ./src/lang/grammar/oolong.jison -o ./src/lang/grammar/oolong.js && npm run build",
        "test": "mocha --recursive src/**/*.spec.js",
        "cover": "nyc --reporter=html --reporter=text mocha test/*.mocha.js --recursive src/**/*.spec.js",
        "bulid:clean": "del-cli lib .nyc_output coverage",
        "build": "npm run bulid:clean && NODE_ENV=production babel src -d lib --ignore \"**/__test__/*.js\" --source-maps --copy-files --no-copy-ignored"
    },
    "repository": "https://github.com/genx-tech/gx-data",
    "bugs": {
        "url": "https://github.com/genx-tech/gx-data/issues"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "license": "MIT",
    "nyc": {
        "exclude": [
            "babel.config.js",
            "test",
            "lib",
            "**/*.spec.js"
        ]
    },
    "devDependencies": {
        "@babel/cli": "^7.14.8",
        "@babel/core": "^7.15.0",
        "@babel/plugin-proposal-class-properties": "^7.14.5",
        "@babel/plugin-proposal-decorators": "^7.14.5",
        "@babel/preset-env": "^7.15.0",
        "@babel/register": "^7.15.3",
        "@genx/babelnode": "^7.14.9",
        "babel-plugin-source-map-support": "^2.1.3",
        "del-cli": "^4.0.1",
        "mocha": "^9.1.1",
        "nyc": "^15.1.0",
        "should": "^13.2.3",
        "source-map-support": "^0.5.19",
        "amqplib": "^0.5.6",
        "fast-csv": "^4.3.6",
        "hyperid": "^2.1.0",
        "ink-docstrap": "^1.3.2",
        "mongodb": "^3.6.3",
        "mysql2": "^2.2.5",
        "shortid": "^2.2.16",
        "stream-transform": "^2.0.4",
        "uniqid": "^5.0.3",
        "winston": "git+https://github.com/kitmi/winston.git",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^5.1.0",
        "prettier": "^2.3.2"
    },
    "dependencies": {
        "@genx/error": "^1.1.1",
        "@genx/jes": "^1.1.3",
        "@genx/july": "^0.3.2",
        "@genx/sys": "^0.1.4",
        "luxon": "^1.28.0",
        "number-to-letter": "^1.0.1",
        "randomstring": "^1.1.5",
        "validator": "^12.2.0"
    },
    "prettier": {
        "quoteProps": "consistent",
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "useTabs": false
    },
    "eslintConfig": {
        "env": {
            "browser": false,
            "commonjs": true,
            "es2021": true
        },
        "extends": [
            "standard",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 12
        },
        "rules": {}
    },
    "eslintIgnore": [
        "/**/__test__"
    ]
}
